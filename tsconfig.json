{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "typeRoots": [
      "types","node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "./renderer/src/*"
      ]
    }
  },
  "include": [
    "renderer",
    "preload",
    "electron",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ],
}