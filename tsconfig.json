{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*":["./renderer/src/*"],
      "@assets/*":["./renderer/assets/*"]
    }
  },
  "include": [
    "renderer",
    "preload",
    "electron"
  ],
  "exclude": ["node_modules"],
}